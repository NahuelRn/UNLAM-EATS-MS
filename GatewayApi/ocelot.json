{
  "Routes": [
    // --- Rutas para el Microservicio de Restaurantes ---
    {
      "UpstreamPathTemplate": "/restaurantes/{*everything}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE" ],
      "DownstreamPathTemplate": "/api/restaurantes/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "restauranteapi",
          "Port": 8080
        }
      ]
    },
    // --- Rutas para el Microservicio de Pedidos ---
    {
      "UpstreamPathTemplate": "/pedidos/{*everything}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE" ],
      "DownstreamPathTemplate": "/api/pedidos/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "pedidosapi",
          "Port": 8080
        }
      ]
    },
    // --- Rutas para el Microservicio de Productos (BASE) ---
    {
      "UpstreamPathTemplate": "/productos", // SIN BARRA AL FINAL
      "UpstreamHttpMethod": [ "GET", "POST" ], // Solo GET (listar) y POST (crear) aplican acá
      "DownstreamPathTemplate": "/api/productos", // SIN BARRA AL FINAL
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "productosapi",
          "Port": 8080
        }
      ]
    },
    // --- Rutas para el Microservicio de Productos (CON ID o más) ---
    {
      "UpstreamPathTemplate": "/productos/{everything}", // CON PLACEHOLDER, SIN '*'
      "UpstreamHttpMethod": [ "GET", "PUT", "DELETE" ], // GET(id), PUT(id), DELETE(id)
      "DownstreamPathTemplate": "/api/productos/{everything}", // CON PLACEHOLDER
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "productosapi",
          "Port": 8080
        }
      ]
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:8000"
  }
}