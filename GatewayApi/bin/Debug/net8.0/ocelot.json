{
  {
    "Routes": [
      // --- Rutas para el Microservicio de Restaurantes ---
      {
        "UpstreamPathTemplate": "/restaurantes/{everything}",
        "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE" ],
        "DownstreamPathTemplate": "/api/{everything}",
        "DownstreamScheme": "http",
        "DownstreamHostAndPorts": [
          {
            "Host": "restauranteapi",
            "Port": 8080
          }
        ]
      },
      // --- Rutas para el Microservicio de Pedidos ---
      {
        "UpstreamPathTemplate": "/pedidos/{everything}",
        "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE" ],
        "DownstreamPathTemplate": "/api/{everything}",
        "DownstreamScheme": "http",
        "DownstreamHostAndPorts": [
          {
            "Host": "pedidosapi",
            "Port": 8080
          }
        ]
      },
      // --- Rutas para el Microservicio de Productos ---
      {
        "UpstreamPathTemplate": "/productos/{everything}",
        "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE" ],
        "DownstreamPathTemplate": "/api/{*everything}",
        "DownstreamScheme": "http",
        "DownstreamHostAndPorts": [
          {
            "Host": "productosapi",
            "Port": 8080
          }
        ]
      }
    ],
    "GlobalConfiguration": {
      "BaseUrl": "http://localhost:8000"
    }
  }
}
